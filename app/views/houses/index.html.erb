<p id="notice"><%= notice %></p>

<h1>Listing Houses</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Outbuilding</th>
      <th>People</th>
      <th>Street</th>
   
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @houses.each do |house| %>
        <tr>
          <td><%= house.house_number %></td>
          <td><%= house.custom_fields %></td>
          <td><%= house.person.name %></td>
          <td><%= house.street.street_name%></td>
                
          <td><%= link_to 'Show', house %></td>
          <td><%= link_to 'Edit', edit_house_path(house) %></td>
          <td><%= link_to 'Destroy', house, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= render '/shared/ref_new' %>
