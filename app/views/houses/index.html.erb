<p id="notice"><%= notice %></p>

<h1>Listing Houses</h1>

<table>
  <thead>
    <tr>
      <th>House</th>
      <th>Custom Name</th>
      <th>Custom Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @houses.each do |house| %>
      <% @custom_houses.each do |custom_house| %>
        <tr>
          <td><%= house.house_number %></td>
          <td><%= custom_house.custom_name %></td>
          <td><%= custom_house.custom_value %></td>
          <td><%= link_to 'Show', house %></td>
          <td><%= link_to 'Edit', edit_house_path(house) %></td>
          <td><%= link_to 'Destroy', house, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

